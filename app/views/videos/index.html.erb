<h1>Videos</h1>

<h1>
  <div class="center">
    <%= link_to 'Adicionar Vídeo', new_video_path, class: "waves-effect indigo waves-light btn-small" %>
  </div>
</h1>
<table class="responsive-table centered">
  <thead>
    <tr>
      <th>Título</th>
      <th>Url</th>
      <th>Arquivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= link_to video.name, video %></td>
        <td><%= video.url.truncate(20) %></td>
        <td><%= link_to 'Ver', video %></td>
        <td><%= link_to 'Editar', edit_video_path(video) %></td>
        <td><%= link_to 'Deletar', video, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center">
  <%= link_to 'Adicionar Vídeo', new_video_path, class: "waves-effect indigo waves-light btn-small" %>
</div>
