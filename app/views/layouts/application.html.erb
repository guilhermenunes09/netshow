<!DOCTYPE html>
<html>
  <head>
    <title>Netshow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://netshow.me/fonts/NeutrifPro-Medium.woff2" rel="stylesheet">
    <link href="https://netshow.me/fonts/NeutrifPro-Regular.woff2" rel="stylesheet">

   <!-- Compiled and minified JavaScript -->
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Javascript Video Player - Videojs  -->
    <%= javascript_include_tag "videojs-contrib-hls.js", "data-turbolinks-track" => true  %>
    <link rel = "stylesheet" type = "text/css" href = "https://vjs.zencdn.net/7.0.0/video-js.css" />
    <script src="https://vjs.zencdn.net/7.0.0/video.min.js"></script>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>

    <div class="bg-image"></div>

    <%= render 'layouts/navbar' %>

    <div class="center">
      <% if notice %>
        <div class="warning-windows">
          <p class="alert alert-success"><%= notice %></p>
        </div>
      <% end %>
      <% if alert %>
        <div class="warning-windows">
          <p class="alert alert-danger"><%= alert %></p>
        </div>
      <% end %>
    </div>

    <div class="main container">
      <%= yield %>
    </div>


    <%= render 'layouts/footer' %>

  </body>
</html>
